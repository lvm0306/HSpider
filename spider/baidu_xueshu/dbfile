CREATE TABLE IF NOT EXISTS `xueshuinfo`(
   `xueshu_infoid` INT UNSIGNED AUTO_INCREMENT,
   `xueshu_id` VARCHAR(200) NOT NULL,
   `xueshu_name` VARCHAR(2000) NOT NULL,
   `xueshuinfo_author` VARCHAR(2000) NOT NULL,
   `xueshuinfo_zhaiyao` VARCHAR(2000) NOT NULL,
   `xueshuinfo_guanjianci` VARCHAR(2000) NOT NULL,
   `xueshuinfo_doi` VARCHAR(2000) NOT NULL,
   `xueshuinfo_beiyinliang` VARCHAR(2000) NOT NULL,
   `xueshuinfo_year` VARCHAR(2000) NOT NULL,
   `xueshuinfo_yanjiudian` VARCHAR(2000) NOT NULL,
   PRIMARY KEY ( `xueshu_infoid` )
)ENGINE=InnoDB DEFAULT CHARSET=utf8;

